<UserControl x:Class="AGV_WS.src.ui.AgvMarker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AGV_WS.src.ui"
             mc:Ignorable="d">
    <Canvas>
        <Grid Width="32" Height="32">
            <Ellipse x:Name="bg" Width="32" Height="32" Stroke="White" StrokeThickness="2" Fill="Red"/>
            <TextBlock Text="AGV" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" FontWeight="Heavy" Foreground="White"/>
        </Grid>
        <Border x:Name="label" CornerRadius="5" Padding="5,2" Canvas.Top="32" Canvas.Left="0" Background="AliceBlue" >
            <TextBlock x:Name="labeltext"/>
        </Border>

    </Canvas>
</UserControl>
